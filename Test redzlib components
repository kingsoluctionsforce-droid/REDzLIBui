function redzlib:MakeWindow(Configs)
	local WTitle = Configs[1] or Configs.Name or Configs.Title or "PALADINOSrk Hub"
	local WMiniText = Configs[2] or Configs.SubTitle or "by PALADINOSrk"  -- Alterado
	
	Settings.ScriptFile = Configs[3] or Configs.SaveFolder or false
	
	local function LoadFile()
		-- (mesmo código de load)
	end LoadFile()
	
	local UISizeX, UISizeY = unpack(redzlib.Save.UISize)
	local MainFrame = InsertTheme(Create("ImageButton", ScreenGui, {
		Size = UDim2.fromOffset(UISizeX, UISizeY),
		Position = UDim2.new(0.5, -UISizeX/2, 0.5, -UISizeY/2),
		BackgroundTransparency = 0.15,
		Name = "Hub"
	}), "Main")
	Make("Gradient", MainFrame, {Rotation = 45}) MakeDrag(MainFrame)
	local MainCorner = Make("Corner", MainFrame)
	
	-- Partículas amarelas neon
	local ParticleContainer = Create("Frame", MainFrame, {
		Size = UDim2.new(1, 0, 1, 0),
		BackgroundTransparency = 1,
		Name = "ThemeParticles",
		ZIndex = -5,
		ClipsDescendants = true
	})
	
	local ParticleConfig = {
		MaxParticles = 30,
		SpawnRate = 0.1,
		ParticleSize = {Min = 6, Max = 12},
		ParticleSpeed = {Min = 15, Max = 30},
		ParticleLifetime = 6
	}

	local ActiveParticles = {}
	local LastSpawn = 0

	local function CreateParticle()
		if #ActiveParticles >= ParticleConfig.MaxParticles then return end
		
		local size = math.random(ParticleConfig.ParticleSize.Min, ParticleConfig.ParticleSize.Max)
		local speed = math.random(ParticleConfig.ParticleSpeed.Min, ParticleConfig.ParticleSpeed.Max)
		local particleColor = Theme["Color Theme"]  -- Amarelo neon
		
		local Particle = Create("Frame", ParticleContainer, {
			Size = UDim2.fromOffset(size, size),
			Position = UDim2.fromOffset(math.random(10, ParticleContainer.AbsoluteSize.X-10), ParticleContainer.AbsoluteSize.Y + 20),
			BackgroundColor3 = particleColor,
			BackgroundTransparency = 0.2,
			BorderSizePixel = 0
		})
		Make("Corner", Particle, UDim.new(1, 0))
		
		local Glow = Create("Frame", Particle, {
			Size = UDim2.new(1, 8, 1, 8),
			Position = UDim2.new(0.5, 0, 0.5, 0),
			AnchorPoint = Vector2.new(0.5, 0.5),
			BackgroundColor3 = particleColor,
			BackgroundTransparency = 0.6,
			ZIndex = -1
		})
		Make("Corner", Glow, UDim.new(1, 0))
		
		local data = {Frame = Particle, Glow = Glow, Speed = speed, Start = tick()}
		table.insert(ActiveParticles, data)
		
		CreateTween({Particle, "BackgroundTransparency", 0.2, 0.8})
		CreateTween({Glow, "BackgroundTransparency", 0.6, 0.8})
	end

	local function UpdateParticles()
		for i = #ActiveParticles, 1, -1 do
			local p = ActiveParticles[i]
			local elapsed = tick() - p.Start
			if elapsed > ParticleConfig.ParticleLifetime or p.Frame.Position.Y.Offset < -20 then
				CreateTween({p.Frame, "BackgroundTransparency", 1, 0.5})
				CreateTween({p.Glow, "BackgroundTransparency", 1, 0.5})
				task.delay(0.5, function() if p.Frame then p.Frame:Destroy() end end)
				table.remove(ActiveParticles, i)
			else
				p.Frame.Position = p.Frame.Position - UDim2.fromOffset(0, p.Speed * 0.016)
			end
		end
	end

	RunService.Heartbeat:Connect(function()
		if tick() - LastSpawn >= ParticleConfig.SpawnRate then
			CreateParticle()
			LastSpawn = tick()
		end
		UpdateParticles()
	end)

	-- Título com "by PALADINOSrk"
	local TopBar = Create("Frame", MainFrame, {Size = UDim2.new(1, 0, 0, 28), BackgroundTransparency = 1})
	local Title = InsertTheme(Create("TextLabel", TopBar, {
		Position = UDim2.new(0, 15, 0.5),
		AnchorPoint = Vector2.new(0, 0.5),
		Text = WTitle,
		TextColor3 = Theme["Color Text"],
		Font = Enum.Font.FredokaOne,
		TextSize = 12,
		BackgroundTransparency = 1
	}), "Text")
	Create("TextLabel", Title, {
		Text = WMiniText,
		TextColor3 = Theme["Color Dark Text"],
		Position = UDim2.new(1, 5, 1, -2),
		AnchorPoint = Vector2.new(0, 1),
		Font = Enum.Font.Gotham,
		TextSize = 9,
		BackgroundTransparency = 1
	})

	-- Todo o resto do código da janela (tabs, sections, etc) permanece o mesmo
	-- A parte mais importante: AddSection com texto amarelo puro
	function Tab:AddSection(Configs)
		local SectionName = type(Configs) == "string" and Configs or Configs[1] or "Section"
		
		local SectionFrame = Create("Frame", Container, {
			Size = UDim2.new(1, 0, 0, 20),
			BackgroundTransparency = 1
		})
		
		local SectionLabel = InsertTheme(Create("TextLabel", SectionFrame, {
			Font = Enum.Font.BuilderSansExtraBold,
			Text = SectionName,
			TextColor3 = Color3.fromRGB(255, 255, 0),  -- SEÇÕES 100% AMARELAS NEON
			Size = UDim2.new(1, -25, 1, 0),
			Position = UDim2.new(0, 30),
			BackgroundTransparency = 1,
			TextSize = 11,
			TextXAlignment = "Left"
		}), "Text")
		
		local Section = {}
		function Section:Visible(Bool)
			SectionFrame.Visible = Bool ~= nil and Bool or not SectionFrame.Visible
		end
		function Section:Set(name) SectionLabel.Text = name end
		return Section
	end
	
	-- Todas as outras funções (AddButton, AddToggle, AddSlider, etc) permanecem iguais
	-- Só vão herdar as cores do tema YellowNeon automaticamente

	return Window
end

-- Retorna a library
return redzlib
